extends ./layout/index.pug

block content
  h1.visually-hidden Компания Станким

  section.index-promo
    .container
      h2.visually-hidden В центре внимания

      .index-promo__img-wrapper
        img.index-promo__img(src="img/promo.png", alt="Современные обрабатывающие центра серии VDL/VDF")

      .index-promo__info
        p.index-promo__name Современные обрабатывающие центра серии VDL/VDF
        p.index-promo__description Новый дизайн. Усиленная конструкция. Комплектующие от мировых лидеров

        .link
          a.link__button(href="#") Узнать больше



  section.special-offers
    .container
      .special-offers__header-row
        h2.special-offers__header Спецпредложения

      ul.special-offers__list
        li.special-offers__item
          a.item-card(href="#")
            .item-card__img-wrapper
              img.item-card__img(src="img/item-card.png", alt="VMC — 1400")
            .item-card__info
              h3.item-card__name VMC — 1400
              ul.item-card__characteristics-list
                li.item-card__characteristics-item
                  p.item-card__characteristics-name Размер рабочего стола, мм:
                  p.item-card__characteristics-value 1400х710
                li.item-card__characteristics-item
                  p.item-card__characteristics-name Перемещение по осям, мм:
                  p.item-card__characteristics-value Х = 1400; Y = 700; Z = 760
